<!DOCTYPE html>
<html>
<head>
    <title>Story Reactions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #000;
            color: #fff;
            padding: 20px;
        }
        .reaction {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .reaction img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }
    </style>
</head>
<body>

<h2>Reactions</h2>

<% if (reactions.length === 0) { %>
    <p>No reactions yet</p>
<% } %>

<% reactions.forEach(r => { %>
    <div class="reaction">
        <% if (r.avatar) { %>
            <img src="/uploads/<%= r.avatar %>">
        <% } %>
        <strong><%= r.username %></strong>
        <span style="margin-left:10px;font-size:20px">
            <%= r.reaction %>
        </span>
    </div>
<% }) %>

</body>
</html>
